<%- include('../partials/header')%>
  </head>

  <body>
    <%- include('../partials/nav')%>
      <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10">
        <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
          Here are our registered Favourite List</h2>
          <div class="flex gap-6 justify-center items-start flex-nowrap overflow-x-auto py-4">
            <% registeredHomes?.forEach(function(home) { %>
              <div class="bg-white rounded-lg shadow-md overflow-hidden mt-6" style="flex: 0% 0 20%; min-width:220px; margin: 10px;">
                <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
                <div class="p-8">
                  <h3 class="text-lg font-bold text-gray-800"><%= home.houseName %></h3>
                  <p class="text-gray-600">Price: $<%= home.housePrice %></p>
                  <p class="text-gray-600">Location: <%= home.location %></p>
                  <p class="text-yellow-500">Rating: <%= home.rating %> â˜…</p>
                 <div class="mt-4">
                   <a href="/store/unfavourites/<%= home.id %>"
                    class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 mt-4 rounded">
                    Un-Favourity
                  </a>
                 </div>
                </div> 
                
              </div>
            <% }); %>
          </div>
      </main>
  </body>

  </html>